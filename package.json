{
  "name": "nidaa",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "build-electron/main.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "electron-dev": "concurrently \"tsc -p electron/tsconfig.json --watch\" \"cross-env NODE_ENV=development electron .\"",
    "build": "next build && tsc -p electron/tsconfig.json",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "lint": "eslint ."
  },
  "description": "A desktop application to notify you of Islamic prayer times based on your location.",
  "author": "Your Name",
  "dependencies": {
    "electron-store": "^11.0.2",
    "luxon": "^3.7.2",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/electron": "^1.6.12",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.19.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "png2icons": "^2.0.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.nidaa.app",
    "productName": "Nidaa",
    "icon": "assets/icon.ico",
    "compression": "maximum",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "out/**/*",
      "build-electron/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*",
      "node_modules/ajv/**/*",
      "node_modules/ajv-formats/**/*",
      "node_modules/json-schema-typed/**/*",
      "!out/**/*.map",
      "!**/.git/**/*",
      "!**/.vscode/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نداء",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.lifestyle"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
